{
  "description": "Principled Release: release readiness advisory for git tag commands",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-release-readiness.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
