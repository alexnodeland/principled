{
  "description": "Principled tasks: database integrity advisory for direct tasks.db edits",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-db-integrity.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
