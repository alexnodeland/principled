{
  "description": "Principled GitHub: PR reference advisory and issue sync reminder",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-pr-references.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
