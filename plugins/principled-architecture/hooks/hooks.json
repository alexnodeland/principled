{
  "description": "Principled architecture: boundary violation advisory for file writes",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-boundary-violation.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
